/*============================================================*/
//
//              A Simple Menu Program in C         
//
/*============================================================*/
#include <stdio.h>
#include <stdlib.h>

int main(){

  char choice;
  puts("\t Main Menu:");
  puts(" a: Formula 1");
  puts(" b: Formula 2");
  puts(" e: Exit");
  
  while(1){

    scanf("%c", &choice);

    if (choice == 'a' || choice == 'A'){
      puts("You chose Formula 1");
    }
    else if (choice == 'b' || choice == 'B'){
      puts("You chose Formula 2");
    }
    else if (choice == 'e' || choice == 'E'){
      puts("Exiting now...");
      break;
    }
    else
    {
      puts("Invalid Input... Please try again!");
    }
    getchar();
  }
  return EXIT_SUCCESS;
}
